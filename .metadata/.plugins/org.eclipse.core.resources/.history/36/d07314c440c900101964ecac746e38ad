package test;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

public class Assign22 {
	
	public static void main(String[] args) throws InterruptedException {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("http://localhost/samples/select.php");
		Thread.sleep(Duration.ofSeconds(5));
		
		WebElement el = driver.findElement(By.id("lang"));
		Select lang = new Select(el);
		
		lang.selectByIndex(0);
		Thread.sleep(Duration.ofSeconds(2));
		lang.selectByIndex(1);
		Thread.sleep(Duration.ofSeconds(2));
		lang.selectByIndex(2);
		Thread.sleep(Duration.ofSeconds(2));
		lang.selectByIndex(3);
		Thread.sleep(Duration.ofSeconds(2));
		lang.selectByIndex(4);
		Thread.sleep(Duration.ofSeconds(2));
		lang.selectByIndex(5);
		
		
		driver.close();
		
	}

}
