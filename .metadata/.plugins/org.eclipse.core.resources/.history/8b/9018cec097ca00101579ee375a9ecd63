package Day6;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class amazon {
	
	public static void main(String[] args) throws InterruptedException {
		
	
	
	WebDriver driver=new ChromeDriver();
	driver.get("https://www.amazon.in/alm/storefront?almBrandId=ctnow&ref_=nav_cs_grocery");
	driver.manage().window().maximize();
	try {
		Thread.sleep(Duration.ofSeconds(5));
	} catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	driver.findElement(By.xpath("//*[@id=\"nav-link-groceries\"]/a/span")).click();
	Thread.sleep(Duration.ofSeconds(5));
	
	driver.findElement(By.xpath("//*[@id=\"a-popover-1\"]/div/button")).click();
	Thread.sleep(Duration.ofSeconds(5));
	
	

	
	

}
}